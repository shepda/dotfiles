conky.config = {
  alignment = 'bottom_left',
  cpu_avg_samples = 2,
  double_buffer = true,
  draw_shades = false,
  extra_newline = false,
  font = 'Ubuntu Mono Regular:size=10',
  gap_x = 30,
  gap_y = 30,
  net_avg_samples = 2,
  no_buffers = true,
  out_to_console = false,
  out_to_ncurses = false,
  out_to_stderr = false,
  own_window = true,
  own_window_type = 'desktop',
  own_window_transparent = true,
  own_window_argb_visual = true,
  own_window_argb_value = 255,
  update_interval = 3,
  use_xft = true
};

conky.text = [[
  ${color 666666}IP${color}  ${color 999999}${execi 5 ~/Repos/dotfiles/.conky-scripts/ip-address.sh}${color}

  ${color 666666}UPTIME${color}  ${color 999999}${uptime}${color}

  ${color 666666}HD${color}  ${color 999999}${fs_free /home} / ${fs_size /home}${color}

  ${color 666666}RAM${color}  ${color 999999}${mem} / ${memmax}${color}

  ${color 666666}CPU${color}   ${color 999999}${cpu cpu0}%${color}

  ${color 666666}VPN${color}   ${color 999999}${execi 5 ~/Repos/dotfiles/.conky-scripts/vpn-status.sh}${color}

  ${color 666666}BINS${color}   ${color 999999}${execi 3 ~/Repos/dotfiles/.conky-scripts/bin-days.sh}${color}
]];
