{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.twig": "html"
  },
  "files.autoSave": "onWindowChange",
  "files.defaultLanguage": "markdown",
  "files.trimTrailingWhitespace": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.external.linuxExec": "terminal",
  "workbench.colorCustomizations": {
    "statusBar.background": "#333333"
  },
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  "breadcrumbs.enabled": false,
  "editor.fontFamily": "'Source Code Pro', 'Droid Sans Mono', 'monospace', 'Droid Sans Fallback'",
  "window.menuBarVisibility": "toggle",
  "workbench.activityBar.visible": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "window.newWindowDimensions": "maximized",
  "search.quickOpen.includeHistory": false,
  "diffEditor.maxComputationTime": 0,
  "[njk]": {
    "editor.defaultFormatter": "eseom.nunjucks-template"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.typegen.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "*.mts": "${capture}.typegen.ts",
    "*.cts": "${capture}.typegen.ts"
  },
  "workbench.editor.untitled.hint": "hidden",
  "editor.renderWhitespace": "none",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true
}
